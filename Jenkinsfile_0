pipeline {
    agent any
    options {
        // This is required if you want to clean before build
        skipDefaultCheckout(true)
    }
    stages {
        
        stage('cloning') {
            steps {
            cleanWs()
                // We need to explicitly checkout from SCM here
                checkout scm
                echo "Building ${env.JOB_NAME}..."
                sh 'git clone https://github.com/khouloudRb/Movies_App.git'
            }
        }
        
        stage('Build') {
            parallel {
                stage('install front dependencies') {
                    steps {
                        sh 'cd ./Movies_App/frontend && yarn install'
                    }
                }
                
                stage('install back dependencies') {
                     steps {
                       sh 'cd ./Movies_App && npm install'
                    }
                }
            }
            
        }
        
        stage ('Run'){
            parallel {
                stage('start front') {
                    steps {
                        dir('./Movies_APP/frontend') {
                        sh 'npm start&'
                        }
                    }
                }
                
                stage('start back') {
                    steps {
                        dir('./Movies_APP') {
                        sh 'node server.js&'
                        }
                    }
                }
            }
        }
        
        stage('Unit tests') {
            steps {
                dir('./Movies_APP/frontend') {
                    sh 'npm test&'
                }
            }
        }
        
        stage('Code quality inspection'){
            steps {
                build job: 'Sonarqube'
            }
        }
        
        stage('Katalon tests') {
            tools {
                jdk 'jdk8'
            }
            steps {
                sh 'sleep 30'
                build job: 'katalon2'
            }
        }
        
    
    }
     post {
            always {
                 emailext body: '''$DEFAULT_CONTENT''',
                 recipientProviders: [[$class: 'DevelopersRecipientProvider'], [$class: 'RequesterRecipientProvider']],
                 subject: '''$DEFAULT_SUBJECT'''
            }
     }
}
